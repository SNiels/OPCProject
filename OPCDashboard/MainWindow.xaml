<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:OPCDashboard.ViewModels"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        x:Class="OPCDashboard.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:DashboardVM />
    </Window.DataContext>
	<Grid x:Name="rootGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="34.4"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="107.2"/>
			<ColumnDefinition Width="307*"/>
			<ColumnDefinition Width="200*"/>
		</Grid.ColumnDefinitions>
		<ComboBox ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedServer}" HorizontalAlignment="Stretch" Margin="8" VerticalAlignment="Top" Grid.Column="1" Height="22"  />
		<TextBlock TextWrapping="Wrap" Text="Server:" Margin="8,8,7.2,0" VerticalAlignment="Top" Height="16"/>
        <Image Grid.Row="1" Grid.ColumnSpan="2" Source="plattegrond.jpg" />
        <ContentControl Content="{Binding DetailsControl}" Grid.Column="2" Grid.RowSpan="2" />
    </Grid>
</Window>
